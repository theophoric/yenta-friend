.page-header 
  %h1
    Information
    %small
      - if chickstud_belongs_to_yentum?(profile)
        = link_to_function "Edit", '$("#information").html("#{escape_javascript(render :partial => "profiles/chickstuds/form", :locals => {:profile => profile})}");'
  %hr.soften
  %table.table.table-striped
    %tbody
      %tr
        %td
          %b Name
        %td= profile.name
      %tr
        %td
          %b Picture
        %td= image_tag profile.fb_image_url("normal")
      %tr
        %td
          %b Gender
        %td= profile.gender.capitalize
      %tr
        %td
          %b Interested In
        %td= profile.interested_in.humanize
      %tr{:colspan => 2}
        %td= link_to "View more information", "http://facebook.com/#{profile.fb_uid}", :target => "_blank"