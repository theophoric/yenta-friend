.navbar.navbar-fixed-top
	.navbar-inner
		.container
			%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			= link_to root_path, :class => "brand" do
				=image_tag("logo-brand.png")
			.nav-collapse
				%ul.nav
					%li.divider
					%li{}
						= link_to "dashboard", dashboard_path
					%li.dropdown{}
						= link_to '#',{ :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'} do
							catches
							%b.caret
						%ul.dropdown-menu
							%li= link_to "matchbook", matchbook_path
							%li.divider
							%li.nav-header catches
							- for profile in current_profile.endorsements.collect(&:chickstud)
								%li
									= link_to profile_path(profile) do
										= image_tag profile.default_image_url, :size => "25x25"
										= profile.name
					%li{}
						= link_to 'contacts', contacts_path
					%li{}
						= link_to 'inbox', inbox_path
					%li
						%a#invite{:href=>"#invite_form", "data-toggle".to_sym => "modal", :onclick => "$('#invite_form').modal()"} Invite
				%ul.nav.pull-right		
					%li.divider-vertical	
					%li.dropdown
						= link_to '#',{ :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'} do
							= image_tag current_user.image_url, :size => "25x25"
							= current_user.first_name + " " + current_user.last_name
							%b.caret
						%ul.dropdown-menu
							= link_to 'profile', profile_path(current_user.profile)
							= link_to "logout", '#', {:id => "logout_link"}