- model_class = @conversation.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:participant_ids) + ':'
  %br
  = @conversation.participant_ids
%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @conversation._id
%p
  %strong= model_class.human_attribute_name(:_type) + ':'
  %br
  = @conversation._type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), conversation_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_conversation_path(@conversation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), conversation_path(@conversation), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
