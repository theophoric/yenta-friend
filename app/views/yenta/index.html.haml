- model_class = Yentum.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:occupation)
      %th= model_class.human_attribute_name(:location)
      %th= model_class.human_attribute_name(:image_url)
      %th= model_class.human_attribute_name(:connection_ids)
      %th= model_class.human_attribute_name(:_id)
      %th= model_class.human_attribute_name(:username)
      %th= model_class.human_attribute_name(:fb_uid)
      %th= model_class.human_attribute_name(:_type)
      %th= model_class.human_attribute_name(:gender)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:interested_in)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:hometown)
      %th= model_class.human_attribute_name(:privacy)
      %th= model_class.human_attribute_name(:age)
      %th= model_class.human_attribute_name(:conversation_ids)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @yenta.each do |yentum|
      %tr
        %td= link_to yentum.id, yentum_path(yentum)
        %td= yentum.name
        %td= yentum.occupation
        %td= yentum.location
        %td= yentum.image_url
        %td= yentum.connection_ids
        %td= yentum._id
        %td= yentum.username
        %td= yentum.fb_uid
        %td= yentum._type
        %td= yentum.gender
        %td= yentum.user_id
        %td= yentum.last_name
        %td= yentum.interested_in
        %td= yentum.description
        %td= yentum.hometown
        %td= yentum.privacy
        %td= yentum.age
        %td= yentum.conversation_ids
        %td= yentum.first_name
        %td=l yentum.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_yentum_path(yentum), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), yentum_path(yentum), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_yentum_path, :class => 'btn btn-primary'
