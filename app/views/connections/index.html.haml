- model_class = Connection.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:partner_ids)
      %th= model_class.human_attribute_name(:_id)
      %th= model_class.human_attribute_name(:approved)
      %th= model_class.human_attribute_name(:_type)
      %th= model_class.human_attribute_name(:observer_ids)
      %th= model_class.human_attribute_name(:privacy)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @connections.each do |connection|
      %tr
        %td= link_to connection.id, connection_path(connection)
        %td= connection.partner_ids
        %td= connection._id
        %td= connection.approved
        %td= connection._type
        %td= connection.observer_ids
        %td= connection.privacy
        %td=l connection.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_connection_path(connection), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), connection_path(connection), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_connection_path, :class => 'btn btn-primary'
