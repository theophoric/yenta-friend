- model_class = Profile.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:occupation)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:observer_connection_ids)
      %th= model_class.human_attribute_name(:location)
      %th= model_class.human_attribute_name(:inbound_link_ids)
      %th= model_class.human_attribute_name(:fb_uid)
      %th= model_class.human_attribute_name(:username)
      %th= model_class.human_attribute_name(:_id)
      %th= model_class.human_attribute_name(:gender)
      %th= model_class.human_attribute_name(:_type)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:interested_in)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:partner_connection_ids)
      %th= model_class.human_attribute_name(:privacy)
      %th= model_class.human_attribute_name(:hometown)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:link_ids)
      %th= model_class.human_attribute_name(:age)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:conversation_ids)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @profiles.each do |profile|
      %tr
        %td= link_to profile.id, profile_path(profile)
        %td= profile.occupation
        %td= profile.name
        %td= profile.observer_connection_ids
        %td= profile.location
        %td= profile.inbound_link_ids
        %td= profile.fb_uid
        %td= profile.username
        %td= profile._id
        %td= profile.gender
        %td= profile._type
        %td= profile.user_id
        %td= profile.interested_in
        %td= profile.last_name
        %td= profile.partner_connection_ids
        %td= profile.privacy
        %td= profile.hometown
        %td= profile.description
        %td= profile.link_ids
        %td= profile.age
        %td= profile.first_name
        %td= profile.conversation_ids
        %td=l profile.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_profile_path(profile), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), profile_path(profile), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_profile_path, :class => 'btn btn-primary'
