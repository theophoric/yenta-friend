= content_for :pageheader do
  %h1 Connections
  %p.lead Explore your chickstuds' connections!
= content_for :subnav do
  %ul.nav.nav-pills
    - for profile in @profiles
      %li= link_to profile.first_name, "##{profile._type.underscore}_#{profile.id}", :class => 'anchorLink'
= content_for :main do
  .container
    - for profile in @profiles do
      = render :partial => 'sections/connections', :locals => {:profile => profile}